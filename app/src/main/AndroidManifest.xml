<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chousnthere_it">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProfActivity" android:theme="@style/MenuBgThem"></activity>
        <activity
            android:name=".UnivListActivity"
            android:label="@string/title_univ_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UnivDetailActivity"
            android:label="@string/title_univ_detail"
            android:parentActivityName=".UnivListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chousnthere_it.UnivListActivity" />
        </activity>
        <activity android:name=".Classroom_empty" />
        <activity android:name=".Classroom_Location" />
        <activity android:name=".Classroom" />
        <activity android:name=".other" />
        <!-- 소영 : Splash 추가 -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity" android:theme="@style/MainTheme" />
    </application>

</manifest>