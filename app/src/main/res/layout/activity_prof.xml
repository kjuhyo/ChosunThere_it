<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfActivity">

<!--    상단 로고 여백-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1">
    </LinearLayout>

<!--    메뉴 타이틀 자리-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="2">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="63dp"
            android:background="@drawable/prof_menu_title"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="27dp"
            >


        </ImageView>
    </LinearLayout>

<!--    검색창 자리-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1">

        <SearchView
            android:id="@+id/search_prof"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/searchbar"
            android:contextClickable="true"
            android:inputType="text" />
    </LinearLayout>

<!--    데이터 자리-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="5">
    </LinearLayout>

<!--    하단 여백-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1">
    </LinearLayout>

</LinearLayout>