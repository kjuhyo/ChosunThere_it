<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Classroom">

    <Button
        android:id="@+id/c_location_btn"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@android:dimen/thumbnail_height"
        android:onClick="onClick_C_location"
        android:text="강의실위치" />

    <Button
        android:id="@+id/c_empty_btn"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@id/c_location_btn"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:onClick="onClick_C_empty"
        android:text="빈 강의실" />
</RelativeLayout>